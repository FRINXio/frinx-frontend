{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "formatter:check": "prettier -l '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' package.json",
    "formatter": "prettier --write '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' package.json",
    "postinstall": "cp _diagram-package.json node_modules/beautiful-react-diagrams/package.json && cd node_modules/beautiful-react-diagrams && npm install && npm run build && rm -rf node_modules",
    "dedubcheck": "dedubcheck",
    "lint:dashboard": "cd packages/frinx-dashboard && yarn run lint",
    "lint:workflow-builder": "cd packages/frinx-workflow-builder && yarn run lint",
    "lint:inventory": "cd packages/frinx-inventory-client && yarn run lint",
    "lint:gamma": "cd packages/frinx-gamma && yarn run lint",
    "lint:api": "cd packages/frinx-api && yarn run lint",
    "type-check:workflow-builder": "cd packages/frinx-workflow-builder && yarn run type-check",
    "type-check:inventory": "cd packages/frinx-inventory-client && yarn run type-check",
    "type-check:gamma": "cd packages/frinx-gamma && yarn run type-check",
    "type-check:dashboard": "cd packages/frinx-dashboard && yarn run type-check",
    "type-check:api": "cd packages/frinx-api && yarn run type-check",
    "lint": "yarn run lint:dashboard && yarn run lint:workflow-builder && yarn run lint:inventory && yarn run lint:api && yarn run lint:gamma",
    "type-check": "run-s type-check:workflow-builder type-check:inventory type-check:api type-check:gamma type-check:dashboard",
    "build:gamma": "cd packages/frinx-gamma && yarn run build",
    "build:api": "cd packages/frinx-api && yarn rollup -c",
    "typegen:inventory-client": "cd packages/frinx-inventory-client && yarn run generate:typings",
    "typegen:gamma": "cd packages/frinx-gamma && yarn run generate:typings",
    "typegen:uniresource-ui": "cd packages/frinx-uniresource-ui && yarn run generate:typings",
    "typegen:workflow-builder": "cd packages/frinx-workflow-builder && yarn run generate:typings",
    "typegen": "run-s typegen:inventory-client typegen:gamma typegen:uniresource-ui typegen:workflow-builder"
  },
  "devDependencies": {
    "dedubcheck": "^0.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}
