{
  "private": true,
  "workspaces": [
    "packages/*",
    "cypress"
  ],
  "engines": {
    "node": ">=19"
  },
  "resolutions": {
    "csstype": "3.0.10",
    "@types/react": "17.0.53"
  },
  "scripts": {
    "formatter:check": "prettier -l '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' 'cypress/**/*.js' 'cypress/**/*.ts' package.json",
    "formatter": "prettier --write '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' 'cypress/**/*.js' 'cypress/**/*.ts' package.json",
    "dedubcheck": "dedubcheck",
    "build:api": "cd packages/frinx-api && yarn run build",
    "dev:api": "cd packages/frinx-api && yarn run dev",
    "build:shared": "cd packages/shared && yarn run build",
    "dev:shared": "cd packages/shared && yarn run dev",
    "build:topology": "cd packages/frinx-device-topology && yarn run build",
    "dev:topology": "cd packages/frinx-device-topology && yarn run dev",
    "build:inventory": "cd packages/frinx-inventory-client && yarn run build",
    "dev:inventory": "cd packages/frinx-inventory-client && yarn run dev",
    "build:resource": "cd packages/frinx-resource-manager && yarn run build",
    "dev:resource": "cd packages/frinx-resource-manager && yarn run dev",
    "build:workflow": "cd packages/frinx-workflow-ui && yarn run build",
    "dev:workflow": "cd packages/frinx-workflow-ui && yarn run dev",
    "build:builder": "cd packages/frinx-workflow-builder && yarn run build",
    "dev:builder": "cd packages/frinx-workflow-builder && yarn run dev",
    "build:dashboard": "cd packages/frinx-dashboard && yarn run build",
    "dev:dashboard": "cd packages/frinx-dashboard && yarn run dev",
    "build:server": "cd packages/frinx-frontend-server && yarn run build",
    "build": "run-s build:shared build:api build:topology build:inventory build:resource build:workflow build:builder build:dashboard build:server",
    "dev:server": "cd packages/frinx-frontend-server && yarn run dev",
    "dev": "run-p dev:shared dev:api dev:topology dev:inventory dev:resource dev:workflow dev:builder dev:dashboard dev:server",
    "turbo": "turbo run typegen type-check lint",
    "pr": "run-s formatter:check version:check turbo",
    "version:check": "node ./version-check.mjs",
    "typegen": "turbo run typegen"
  },
  "devDependencies": {
    "dedubcheck": "0.0.8",
    "npm-run-all": "4.1.5",
    "prettier": "^2.8.4",
    "turbo": "^1.4.3"
  },
  "packageManager": "yarn@3.4.1"
}
