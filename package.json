{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "formatter:check": "prettier -l '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' package.json",
    "formatter": "prettier --write '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' package.json",
    "postinstall": "cp _diagram-package.json node_modules/beautiful-react-diagrams/package.json && cd node_modules/beautiful-react-diagrams && npm install && npm run build && npm link ../../node_modules/react",
    "dedubcheck": "dedubcheck"
  },
  "devDependencies": {
    "dedubcheck": "^0.0.6",
    "prettier": "^2.2.1"
  },
  "resolutions": {
    "chokidar": "^3.5.1",
    "core-js": "^3.9.1",
    "eslint": "^7.22.0",
    "highlight.js": "^10.7.1",
    "source-map-resolve": "^0.6.0"
  }
}
