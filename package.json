{
  "private": true,
  "workspaces": [
    "packages/*",
    "cypress"
  ],
  "engines": {
    "node": ">=16"
  },
  "resolutions": {
    "csstype": "3.0.10",
    "@types/react": "17.0.42",
    "react-ace@10.1.0": "patch:react-ace@npm:10.1.0#.yarn/patches/react-ace-npm-10.1.0-48bccfeb30.patch"
  },
  "scripts": {
    "formatter:check": "prettier -l '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' 'cypress/**/*.js' 'cypress/**/*.ts' package.json",
    "formatter": "prettier --write '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' 'cypress/**/*.js' 'cypress/**/*.ts' package.json",
    "dedubcheck": "dedubcheck",
    "build:api": "cd packages/frinx-api && yarn rollup -c",
    "build:dashboard": "cd packages/frinx-dashboard && yarn run build",
    "build:server": "cd packages/frinx-frontend-server && yarn run build",
    "build": "run-s build:dashboard build:server",
    "dev:client": "cd packages/frinx-dashboard && yarn run dev",
    "dev:server": "cd packages/frinx-frontend-server && yarn run dev",
    "dev": "run-p dev:client dev:server",
    "turbo": "turbo run typegen type-check lint",
    "pr": "run-s formatter:check version:check turbo",
    "version:check": "node ./version-check.mjs"
  },
  "devDependencies": {
    "dedubcheck": "0.0.8",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "turbo": "^1.4.3"
  },
  "packageManager": "yarn@3.2.0"
}
