{
  "private": true,
  "workspaces": [
    "packages/*",
    "cypress"
  ],
  "engines": {
    "node": ">=19"
  },
  "scripts": {
    "formatter:check": "prettier -l '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' 'cypress/**/*.js' 'cypress/**/*.ts' package.json",
    "formatter": "prettier --write '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' 'cypress/**/*.js' 'cypress/**/*.ts' package.json",
    "dedubcheck": "dedubcheck",
    "build:api": "lerna run build --scope=@frinx/api",
    "dev:api": "cd packages/frinx-api && npm run dev",
    "build:shared": "lerna run build --scope=@frinx/shared",
    "dev:shared": "cd packages/shared && npm run dev",
    "build:topology": "lerna run build --scope=@frinx/device-topology",
    "dev:topology": "cd packages/frinx-device-topology && npm run dev",
    "build:inventory": "lerna run build --scope=@frinx/inventory-client",
    "dev:inventory": "cd packages/frinx-inventory-client && npm run dev",
    "build:resource": "lerna run build --scope=@frinx/resource-manager",
    "dev:resource": "cd packages/frinx-resource-manager && npm run dev",
    "build:workflow": "lerna run build --scope=@frinx/workflow-ui",
    "dev:workflow": "cd packages/frinx-workflow-ui && npm run dev",
    "build:builder": "lerna run build --scope=@frinx/workflow-builder",
    "dev:builder": "cd packages/frinx-workflow-builder && npm run dev",
    "build:dashboard": "lerna run build --scope=@frinx/dashboard",
    "dev:dashboard": "cd packages/frinx-dashboard && npm run dev",
    "build:server": "lerna run build --scope=@frinx/frontend-server",
    "build": "run-s build:shared build:api build:topology build:inventory build:resource build:workflow build:builder build:dashboard build:server",
    "typegen": "lerna run typegen",
    "dev:server": "cd packages/frinx-frontend-server && npm run dev",
    "dev": "run-p dev:shared dev:api dev:topology dev:inventory dev:resource dev:workflow dev:builder dev:dashboard dev:server",
    "lerna:shared": "lerna run typegen,type-check,lint --scope=@frinx/shared",
    "lerna": "lerna run typegen,type-check,lint",
    "pr": "run-s version:check lerna:shared lerna",
    "version:check": "node ./version-check.mjs"
  },
  "devDependencies": {
    "dedubcheck": "0.0.8",
    "lerna": "^7.2.0",
    "npm-run-all": "4.1.5",
    "nx": "^16.8.1",
    "nx-cloud": "^16.4.0",
    "prettier": "^3.0.0"
  }
}
