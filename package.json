{
  "private": true,
  "workspaces": [
    "packages/*",
    "cypress"
  ],
  "engines": {
    "node": ">=19"
  },
  "scripts": {
    "formatter:check": "prettier -l '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' 'cypress/**/*.js' 'cypress/**/*.ts' package.json",
    "formatter": "prettier --write '*.md' 'packages/**/*.js' 'packages/**/*.ts' 'packages/**/*.tsx' 'packages/*/package.json' 'cypress/**/*.js' 'cypress/**/*.ts' package.json",
    "dedubcheck": "dedubcheck",
    "build:api": "cd packages/frinx-api && npm run build",
    "dev:api": "cd packages/frinx-api && npm run dev",
    "typegen:api": "cd packages/frinx-api && npm run typegen",
    "build:shared": "cd packages/shared && npm run build",
    "dev:shared": "cd packages/shared && npm run dev",
    "typegen:shared": "cd packages/shared && npm run typegen",
    "build:topology": "cd packages/frinx-device-topology && npm run build",
    "dev:topology": "cd packages/frinx-device-topology && npm run dev",
    "typegen:topology": "cd packages/frinx-device-topology && npm run typegen",
    "build:inventory": "cd packages/frinx-inventory-client && npm run build",
    "dev:inventory": "cd packages/frinx-inventory-client && npm run dev",
    "typegen:inventory": "cd packages/frinx-inventory-client && npm run typegen",
    "build:resource": "cd packages/frinx-resource-manager && npm run build",
    "dev:resource": "cd packages/frinx-resource-manager && npm run dev",
    "typegen:resource": "cd packages/frinx-resource-manager && npm run typegen",
    "build:workflow": "cd packages/frinx-workflow-ui && npm run build",
    "dev:workflow": "cd packages/frinx-workflow-ui && npm run dev",
    "typegen:workflow": "cd packages/frinx-workflow-ui && npm run typegen",
    "build:builder": "cd packages/frinx-workflow-builder && npm run build",
    "dev:builder": "cd packages/frinx-workflow-builder && npm run dev",
    "typegen:builder": "cd packages/frinx-workflow-builder && npm run typegen",
    "build:dashboard": "cd packages/frinx-dashboard && npm run build",
    "dev:dashboard": "cd packages/frinx-dashboard && npm run dev",
    "build:server": "cd packages/frinx-frontend-server && npm run build",
    "build": "run-s build:shared build:api build:topology build:inventory build:resource build:workflow build:builder build:dashboard build:server",
    "typegen": "run-s typegen:shared typegen:topology typegen:inventory typegen:resource typegen:workflow typegen:builder typegen:api",
    "dev:server": "cd packages/frinx-frontend-server && npm run dev",
    "dev": "run-p dev:shared dev:api dev:topology dev:inventory dev:resource dev:workflow dev:builder dev:dashboard dev:server",
    "turbo": "turbo run type-check lint",
    "pr": "run-s version:check turbo",
    "version:check": "node ./version-check.mjs"
  },
  "devDependencies": {
    "dedubcheck": "0.0.8",
    "npm-run-all": "4.1.5",
    "prettier": "^3.0.0",
    "turbo": "^1.4.3"
  }
}
